<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js"></script>
<script type="text/javascript">
    var ctx = document.getElementsByClassName("line-chart");

    // type, data e options

    var chartGraph = new Chart(ctx, {
        type: 'scatter',
        data: {
            labels: [
                'Abril',
                'Mai',
                'Jun',
                'Jul',
                'Ago',
                'Set',
                'Out'
            ],
            datasets: [{
                type: 'bar',
                label: 'Usuarios Logados',
                data: [@ViewBag.usuarios],
                borderColor: 'rgb(255, 99, 132)',
                backgroundColor: 'rgba(37, 186, 255, 0.73)'
            }, {
                type: 'bar',
                label: 'Funcionarios Cadastrados',
                data: [@ViewBag.resultado],
                fill: false,
                borderColor: 'rgba(124, 37, 255, 0.73)',
                 backgroundColor: 'rgba(124, 37, 255, 0.73)'

            }, {
                type: 'bar',
                label: 'Calculo MedGrupo Ativo',
                data: [@ViewBag.cliques],
                fill: false,
                borderColor: 'rgba(37, 77, 255, 0.73)',
                backgroundColor: 'rgba(37, 77, 255, 0.73)'
                },
            {
                type: 'bar',
                label: 'Comentarios',
                data: [@ViewBag.comentarios],
                fill: false,
                borderColor: 'rgba(255, 111, 0, 0.862)',
                backgroundColor: 'rgba(255, 111, 0, 0.862)'
            }]
        }
    });


</script>
